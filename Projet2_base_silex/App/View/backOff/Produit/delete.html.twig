{% extends "layout.html.twig" %}
{% block contenu %}
	<hr>

    <form method="post" action="{{ path('produit.validFormDelete') }}">
    <div class="row col-lg-4 col-lg-offset-4">

        <fieldset>
            <legend>Confirmer la suppression du produit suivant : (avec twig)</legend>
            <input name="id"  type="hidden" value="{{donnees.id}}" />
            <label>Nom : <h5>{{donnees.nom}}</h5> </label>
            <input type="hidden" id="_method" name="_method" value="delete" />

            <input type="submit" name="supprimerProduit" value="Supprimer" />
        </fieldset>
    </div>
    </form>
{% endblock %}
