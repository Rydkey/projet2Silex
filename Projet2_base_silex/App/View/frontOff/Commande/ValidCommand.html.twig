{% extends "layout.html.twig" %}
{% block contenu %}
    {% if   app.session.get('logged') is defined and  app.session.get('logged') == 1 %}
        <div class="row">
            <div class="col-md-6 col-lg-offset-3">
            <table class="table table-responsive table-bordered">
                <caption><h4>Mon panier</h4></caption>
                <thead>
                <tr class="table text-capitalize"><th>nom</th><th>quantit√©</th><th>prix total</th><th>photo</th>
                </tr>
                </thead>
                <tbody>
                {% set prix_total=0 %}
                {% for ligne in panier if panier is not empty %}
                    {% set prix_total=prix_total+ligne.prix*ligne.quantite %}
                    <tr>
                        <td>{{ligne.nom}}</td><td>{{ligne.quantite}}</td><td>{{ligne.prix*ligne.quantite}}</td>
                        <td>
                            <img style="width:40px;height:40px" src="{{asset('images/')}}{{ligne.photo}}" alt="image de {{ligne.nom}}" >
                        </td>
                    </tr>
                {% endfor %}
                {% if prix_total!=0 %}
                    <tr>
                        <td colspan="3" >
                            Valeur total : {{ prix_total }}
                        </td>
                        <td>
                            <a href="{{ path('Commande.CreateCommand') }}"><button type="submit" class="btn btn-sm btn-success"><span class="glyphicons glyphicon glyphicons-shopping-cart"></span>Passer la commande</button></a>
                        </td>
                    </tr>
                {% endif %}
                <tbody>
            </table>
            </div>
        </div>
    {% endif %}
{% endblock %}